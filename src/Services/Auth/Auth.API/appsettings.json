{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/auth-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=AuthDb;User Id=sa;Password=Password123!;TrustServerCertificate=True;"
  },
  "JwtSettings": {
    "SecretKey": "ThisIsASecretKeyForJwtTokenGenerationYOUR_SECRET_KEY_HERE_CHANGE_IN_PRODUCTION",
    "Issuer": "https://auth.joseph.com",
    "Audience": "https://api.joseph.com",
    "ExpirationMinutes": 1440
  },
  "Logging": {
    "SeqUrl": "http://localhost:5341"
  },
  "AllowedHosts": "*"
}
